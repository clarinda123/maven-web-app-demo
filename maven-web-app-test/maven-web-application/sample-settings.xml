<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- 1. Server credentials for deploying to Nexus -->
  <servers>
    <server>
      <id>nexus</id>
      <username>admin</username>
      <password>admin123</password>
    </server>
  </servers>

  <!-- 2. Mirror everything through your Nexus “maven-public” group -->
  <mirrors>
    <mirror>
      <id>nexus</id>
      <mirrorOf>*</mirrorOf>
      <url>http://3.8.117.175:8081/repository/maven-proxy-repo/</url>
    </mirror>
  </mirrors>

  <!-- 3. Activate any Nexus-specific settings/plugins -->
  <profiles>
    <profile>
      <id>nexus</id>
      <!-- e.g. if you need to pull plugins through Nexus too -->
      <pluginRepositories>
        <pluginRepository>
          <id>nexus-plugins</id>
          <url>http://central</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <!-- 4. Turn on the Nexus profile by default -->
  <activeProfiles>
    <activeProfile>nexus</activeProfile>
  </activeProfiles>

</settings>

